@model AnswerCrudModel

<div class="b-dotted" style="padding:7px; margin-bottom:6px">
        <div class="form-group">
            <label class="control-label">Answer</label>
            <input id="txtAnswerContent" type="text" placeholder="Enter answer" class="form-control" />
        </div>
        <div class="form-group form-check">
            <input id="txtAnswerIsCorrect" type="checkbox" class="form-check-input" />
            <label for="txtAnswerIsCorrect" class="form-check-label">
                Is Correct
            </label>
        </div>
        <input type="hidden" id="txtAnswerQuestionId" value="@Model.QuestionId" />
        <div class="form-group">
            <input type="button" id="btnSubmit" onclick="addAnswer(@Model.QuestionId)" value="Create" class="btn btn-rounded btn-primary mb-5" />
            &nbsp; &nbsp;
            <input type="button" value="Cancel" onclick="hideCreateAnswer()" class="btn btn-rounded btn-danger mb-5" />
        </div>
</div>
<script>
    function hideCreateAnswer() {
        $("#showCreateAnswer").html("");
        $("#btnAddAnswer").prop("type", "button");
    };
</script>
