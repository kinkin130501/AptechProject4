@model IEnumerable<QuestionViewModel>
@{
    var count = 0;
    var maxScore = 0.0;
}
<label class="control-label">List Question</label>
<table class="table">
    <thead>
        <tr>
            <th width="10%">STT</th>
            <th width="70%">Question</th>
            <th>Mark</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            count++;
            if (i.Score == null)
            {
                i.Score = 0;
            }
            maxScore = maxScore + (double)i.Score;

            <tr>
                <td>@count</td>
                <td>@i.Content</td>
                <td>@i.Score</td>
                @*<td>
                        <button type="button" class="btn-info" onclick="return card(@i.CourseId, 'Xóa')">Xóa</button>
                    </td>*@
            </tr>
        }
        <tr>
            <td></td>
            <td><b>Max mark</b></td>
            <td><b>@maxScore</b></td>

        </tr>
    </tbody>
</table>

<div class="form-group">
    <input type="hidden" step="0.5" name="MaxScore" id="txtMaxScore" class="form-control" value="@maxScore" />
</div>
<div class="form-group">
    <label name="PassScore" class="control-label">Required Mark</label>
    <input name="PassScore" class="form-control" id="txtPassScore" type="number" step="0.25" min="0" />
</div>
<input name="TotalQuestion" type="hidden" value="@count" />
