<div class="text-left" style="padding: 10px">
    @if (Model.DepartmentStatus == (int)DepartmentStatus.Apply)
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-departmentid="@Model.DepartmentId">Edit Information</a>
    }
    <a class="btn btn-warning" asp-action="Index">Back</a>
