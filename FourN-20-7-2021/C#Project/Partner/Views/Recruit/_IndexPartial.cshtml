<div class="text-right" style="padding: 10px">
    <a class="btn btn-primary btn-rounded" href="@Url.Action("Create")">Create new</a>
    <a class="btn btn-primary btn-rounded" href="@Url.Action("Request")">Request</a>
</div>
<div class="text-center">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th width="15%">Title</th>
                <th width="20%">Date time</th>
                @*<th width="5%">Time End</th>*@
                <th width="10">Quantity</th>
                <th width="20">Department</th>
                <th width="10%">Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        @item.TimeEnd
                    </td>
                    @*<td>@item.TimeEnd</td>*@
                    <td>@item.Quantity</td>
                    <td><span>Developer</span></td>
                    <td><img src="@item.Image" style="width: 100px; height: 100px" /></td>
                    <td>
                        @*<a class="btn btn-primary btn-sm" href="~/Recruit/ListCandicate/@item.DepartmentId">
                            <i class="fas fa-folder">
                            </i>
                            View
                        </a>*@
                        <a class="btn btn-primary btn-sm" onclick="showDetail(@item.DepartmentId)">
                            <i class="fas fa-folder">
                            </i>
                            View
                        </a>
                        <a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#delete-model" onclick="Delete(@item.DepartmentId)">
                            <i class="fas fa-trash">
                            </i>
                            Delete
                        </a>
                        @if(item.DepartmentStatus == (int)DepartmentStatus.Expired)
                        {
                            <a class="btn btn-outline-primary btn-sm" onclick="showInterview(@item.DepartmentId)">
                                <i class="fas fa-folder">
                                </i>
                                Interview
                            </a>
                         }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>