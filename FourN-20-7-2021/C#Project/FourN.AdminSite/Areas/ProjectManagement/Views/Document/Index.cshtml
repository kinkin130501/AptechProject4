@model IEnumerable<FourN.Data.Models.Documents>
@{
    int i = 0;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">DOCUMENTS</h1>
            </div><!-- /.col -->
            <div class="col-sm-5">
            </div>
            <div class="col-sm-1">
                <a href="~/ProjectManagement/Document/Create"><h3><i style="color: deepskyblue" class="far fa-plus-square"></i></h3></a>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <!-- /.card-header -->

            <div class="card-body table-responsive p-0" style="max-height: 425px;">
                <table class="table table-hover table-head-fixed text-nowrap paginationtable">
                    <thead>
                        <tr>
                            <th style="width: 25px;">List</th>
                            <th style="width: 150px;">Title</th>
                            <th style="width: 100px;">Name Of Author</th>
                            <th style="width: 100px;">File</th>
                            <th style="width: 700px;">Note</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <p>
                                        @(++i)
                                    </p>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.authorname)
                                </td>
                                <td>
                                    <a href="~/img/AdminLTELogo.png" target="_blank">
                                        @Html.DisplayFor(modelItem => item.files)
                                    </a>
                                </td>
                                <td style="max-width: 700px; white-space: normal">
                                @Html.Raw(item.note)
                                </td>
                                <td>
                                    <a class="btn btn-primary" style="margin: 0px; padding-left: 10px; padding-right: 10px;" href="~/ProjectManagement/Document/Delete/@item.docid">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<script src="~/js/notify.js"></script>
<script>
    $(document).ready(function () {
        //add color background
        $('li.Document').css('background-color', 'azure');
    });
</script>